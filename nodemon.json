{
    "restartable": "rs",
    "ignore": [".git", "node_modules/", "dist/", "coverage/"],

    "delay": "1000",
    "watch": ["server/", "common/", "plugins", "exts/"],
    "ext": "ts,js,json",

    "execMap": {
        "js": "node -r @babel/register",
        "ts": "node -r ts-node/register"
    },
    "env": {
        "NODE_ENV": "development"
    }
}
